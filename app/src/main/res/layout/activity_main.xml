<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="12dp"
    android:gravity="bottom">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="0"
        android:textSize="48sp"
        android:textColor="#FFFFFF"
        android:gravity="end|bottom"
        android:padding="20dp" />

    <!-- Row 1 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:weightSum="4">
        <Button android:text="C" style="@style/FuncButton"/>
        <Button android:text="CE" style="@style/FuncButton"/>
        <Button android:text="âŒ«" style="@style/FuncButton"/>
        <Button android:text="/" style="@style/OpButton"/>
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:weightSum="4">
        <Button android:text="7" style="@style/NumButton"/>
        <Button android:text="8" style="@style/NumButton"/>
        <Button android:text="9" style="@style/NumButton"/>
        <Button android:text="*" style="@style/OpButton"/>
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:weightSum="4">
        <Button android:text="4" style="@style/NumButton"/>
        <Button android:text="5" style="@style/NumButton"/>
        <Button android:text="6" style="@style/NumButton"/>
        <Button android:text="-" style="@style/OpButton"/>
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:weightSum="4">
        <Button android:text="1" style="@style/NumButton"/>
        <Button android:text="2" style="@style/NumButton"/>
        <Button android:text="3" style="@style/NumButton"/>
        <Button android:text="+" style="@style/OpButton"/>
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:weightSum="4">
        <Button android:text="%" style="@style/FuncButton"/>
        <Button android:text="0" style="@style/NumButton"/>
        <Button android:text="." style="@style/NumButton"/>
        <Button android:text="=" style="@style/EqualButton"/>
    </LinearLayout>
</LinearLayout>
